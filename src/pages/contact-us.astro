---
import Layout from "@layouts/Layout.astro";

const contacts = [
  {
    name: "Project Leads",
    email: "warewulf-leads@hpcng.org",
  },
  {
    name: "Web",
    email: "warewulf-web@hpcng.org",
  },
  {
    name: "Security",
    email: "warewulf-security@hpcng.org",
  },
];
---

<Layout
  title="Contact Us | Warewulf - The Next-Gen Cluster Management Solution"
>
  <div class="mt-20 bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-4xl font-bold uppercase tracking-tight text-gray-900 sm:text-6xl"
      >
        Contact Us
      </h2>
    </div>
  </div>

  <div class="mb-10 max-w-3xl md:mx-auto md:mb-12 lg:max-w-4xl">
    <div class="flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <div
            class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg"
          >
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th
                    scope="col"
                    class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                    >Team</th
                  >
                  <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Email</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                {
                  contacts.map((contact) => (
                    <tr>
                      <td class="whitespace-nowrap px-6 py-4">
                        <div class="flex items-center">
                          <div>
                            <div class="text-sm font-medium text-gray-900">
                              {contact.name}
                            </div>
                            <a href={`mailto:${contact.email}`}>
                              <div class="text-sm text-gray-500">
                                {contact.email}
                              </div>
                            </a>
                          </div>
                        </div>
                      </td>
                      <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
                        <a
                          href={`mailto:${contact.email}`}
                          class="text-green-700 hover:text-green-700"
                        >
                          Send Email
                        </a>
                      </td>
                    </tr>
                  ))
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
